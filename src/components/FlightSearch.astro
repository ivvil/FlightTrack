<form action="/flight" method="GET" class="max-w-xl mx-auto p-4 bg-white shadow rounded">
    <div class="mb-4">
        <label for="origin" class="block text-gray-700 font-bold mb-2">Origen</label>
        <input
            type="text"
            name="origin"
            id="origin"
            placeholder="Ej: MAD"
            required
            class="w-full p-2 border rounded"
        />
    </div>
    <div class="mb-4">
        <label for="destination" class="block text-gray-700 font-bold mb-2">Destino</label>
        <input
            type="text"
            name="destination"
            id="destination"
            placeholder="Ej: PRG"
            required
            class="w-full p-2 border rounded"
        />
    </div>
    <div class="mb-4">
        <label for="departure_date" class="block text-gray-700 font-bold mb-2">Fecha de salida</label>
        <input
            type="date"
            name="departure_date"
            id="departure_date"
            required
            class="w-full p-2 border rounded"
        />
    </div>
    <div class="mb-4">
        <label for="return_date" class="block text-gray-700 font-bold mb-2">Fecha de regreso</label>
        <input
            type="date"
            name="return_date"
            id="return_date"
            required
            class="w-full p-2 border rounded"
        />
    </div>
    <button
        type="submit"
        class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700"
    >
        Buscar vuelos
    </button>
</form>